<Window x:Class="Gpto1MiniClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Gpto1MiniClient"
        Title="Gpto1MiniClient" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox Name="ChatBox" Grid.Row="0" Margin="10" 
                 IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <TextBox Name="MessageBox" Width="600" Height="30" />
            <Button Content="Send" Width="100" Height="30" Margin="10,0,0,0" Click="SendButton_Click" />
        </StackPanel>
    </Grid>
</Window>
