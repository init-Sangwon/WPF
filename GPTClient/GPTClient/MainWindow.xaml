<Window x:Class="GPTClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GPTClient" Height="400" Width="600">
    <Grid>
        <TextBox x:Name="ChatBox" VerticalScrollBarVisibility="Auto" IsReadOnly="True" Margin="10,10,10,50"/>
        <TextBox x:Name="MessageInput" Margin="10,310,100,10"/>
        <Button Content="Send" HorizontalAlignment="Right" Margin="0,310,10,10" Width="80" Click="SendButton_Click"/>
    </Grid>
</Window>
