<Window x:Class="chatClient.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Message Popup" Height="100" Width="300"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ResizeMode="NoResize" ShowInTaskbar="False">
    <Border Background="#AA000000" CornerRadius="10">
        <Grid>
            <TextBlock x:Name="MessageText" Foreground="White" FontSize="16"
                       VerticalAlignment="Center" HorizontalAlignment="Center"
                       TextWrapping="Wrap" TextAlignment="Center" Margin="10"/>
        </Grid>
    </Border>
</Window>
