<Application x:Class="WpfApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfApp"
             StartupUri="Views/Main/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ResourceDictionary/Fonts/Font.xaml"/>
                <ResourceDictionary Source="ResourceDictionary/Buttons/Buttons.xaml"/>
                <ResourceDictionary Source="ResourceDictionary/ConTextMenus/Contextmenu.xaml"/>
                <ResourceDictionary Source="ResourceDictionary/MenuItems/MenuItem.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
