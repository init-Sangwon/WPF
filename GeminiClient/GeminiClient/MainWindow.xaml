<Window x:Class="GeminiClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GeminiClient" Height="350" Width="400">
    <Grid>
        <TextBox x:Name="ChatTextBox" IsReadOnly="True" Margin="10,10,10,100" VerticalScrollBarVisibility="Auto"/>
        <TextBox x:Name="MessageTextBox" Margin="10,220,90,40" IsEnabled="False"/>
        <Button x:Name="SendButton" Content="보내기" Margin="310,220,10,40" Click="SendButton_Click" IsEnabled="False"/>
        <TextBox x:Name="ServerIPTextBox" Margin="10,270,140,10"/>
        <TextBox x:Name="PortTextBox" Margin="270,270,10,10" Text="8888"/>
        <Button x:Name="ConnectButton" Content="연결" Margin="170,270,100,10" Click="ConnectButton_Click"/>
        <Label Content="서버 IP:" HorizontalAlignment="Left" Margin="10,250,0,0" VerticalAlignment="Top"/>
        <Label Content="포트:" HorizontalAlignment="Left" Margin="270,250,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>